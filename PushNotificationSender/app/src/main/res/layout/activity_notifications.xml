<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layoutDirection="rtl"
              android:layout_margin="8dp"
              tools:context=".NotificationsActivity">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@id/general_button">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חירום"
            android:tag="harucon2018_emergency"/>
        <RadioButton
            android:id="@+id/general_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כללי"
            android:tag="harucon2018_general"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="אירועים"
            android:tag="harucon2018_events"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="קוספליי"
            android:tag="harucon2018_cosplay"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הסעות"
            android:tag="harucon2018_bus"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="בדיקות"
            android:tag="harucon2018_test"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:onClick="sendNotificationButtonOnClick"/>

    </LinearLayout>


    <TextView
        android:id="@+id/remainingCharsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/1900"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:inputType="text"
        android:hint="@string/notification_text_hint"
        android:layout_height="wrap_content" />

</LinearLayout>